{
  "name": "TubeLoop",
  "description": "TubeLoop extension will add new a loop shortcut in the Youtube player control. That will help user to using the loop feature easier in Youtube",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "tabs", "storage", "identity"],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "background": {
    "service_worker": "/static/js/background.js"
  },
  "host_permissions": ["https://www.youtube.com/watch?v=*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch?v=*"],
      "css": ["/static/css/main.css"]
    }
  ]
}
